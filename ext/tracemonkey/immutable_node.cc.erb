/*
 * call-seq:
 *   function_name
 *
 * Returns the function name as a String.
 */
static VALUE function_name(VALUE self) {
  ImmutableNodeContext * ctx;
  JSFunction * f;
  JSObject * object;

  Data_Get_Struct(self, ImmutableNodeContext, ctx);
  object = ctx->node->pn_funbox->object;
  f = (JSFunction *)JS_GetPrivate(ctx->js, ctx->node->pn_funbox->object);

  if(f->atom) {
    return rb_str_new2(JS_GetStringBytes(ATOM_TO_STRING(f->atom)));
  } else {
    return Qnil;
  }
}

/*
 * call-seq:
 *   function_args
 *
 * Returns the function argument names as an Array of String.
 */
static VALUE function_args(VALUE self) {
  ImmutableNodeContext * ctx;
  JSFunction * f;
  JSObject * object;
  jsuword* names;
  VALUE func_args;
  int i;

  Data_Get_Struct(self, ImmutableNodeContext, ctx);
  object = ctx->node->pn_funbox->object;
  f = (JSFunction *)JS_GetPrivate(ctx->js, ctx->node->pn_funbox->object);

  func_args = rb_ary_new2((long)f->nargs);
  if(f->nargs > 0) {
    names = js_GetLocalNameArray(ctx->js, f, &ctx->js->tempPool);
    for(i = 0; i < f->nargs; i++) {
      rb_ary_push(func_args,
          rb_str_new2(JS_GetStringBytes(ATOM_TO_STRING(names[i])))
          );
    }
  }
  return func_args;
}

/*
 * call-seq:
 *   function_body
 *
 * Returns the function body as an ImmutableNode.
 */
static VALUE function_body(VALUE self) {
  ImmutableNodeContext * ctx;
  JSFunction * f;
  JSObject * object;

  Data_Get_Struct(self, ImmutableNodeContext, ctx);
  object = ctx->node->pn_funbox->object;
  f = (JSFunction *)JS_GetPrivate(ctx->js, ctx->node->pn_funbox->object);

  if(ctx->node->pn_body) {
    
    /* in some cases the args can be in the body node ...
       for now, throwing the args away, not sure if this should be combined with
       function_args
    */
    
    JSParseNode* body = ctx->node->pn_body;
    
    switch(body->pn_type) {
    case TOK_ARGSBODY:
      JSParseNode* list = body->pn_kid;
      /* skip the args; the body lc is the last element in the list */
      while(list->pn_next){
        list = list->pn_next;
      }
      body = list;
      break;
    }

    ImmutableNodeContext *roc;
    VALUE node = Data_Make_Struct(cNode, ImmutableNodeContext, NULL, NULL, roc);
    roc->js = ctx->js;
    roc->node = body;
    return node;
  }

  return Qnil;
}

