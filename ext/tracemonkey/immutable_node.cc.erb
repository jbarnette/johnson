  */

  /* ImmutableNode class. */
  cNode = rb_define_class_under(tracemonkey, "ImmutableNode", rb_cObject);

  rb_define_alloc_func(cNode, allocate);
  rb_define_singleton_method(cNode, "parse_io", (ruby_callback)parse_io, -1);
